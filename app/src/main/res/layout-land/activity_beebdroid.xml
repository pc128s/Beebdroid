<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:lft="http://schemas.android.com/apk/res-auto"
	
	android:id="@+id/root"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	
	
<view class="com.littlefluffytoys.beebdroid.Beebdroid$BeebView"
	android:id="@+id/beeb"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_marginLeft="60dp"
	android:layout_marginRight="60dp"
	/>


<FrameLayout 	
	android:layout_width="fill_parent"
	android:layout_height="@dimen/keyboardAreaHeight"
	android:layout_alignParentBottom="true"
>	
<ViewFlipper 
	android:id="@+id/flipper"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>	

<view class="com.littlefluffytoys.beebdroid.Keyboard"
	android:id="@+id/keyboard"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	/>

<view class="com.littlefluffytoys.beebdroid.ControllerView"
	android:id="@+id/controller"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	/>

</ViewFlipper>
</FrameLayout>


<ImageView 
	android:id="@+id/btnSave"
	android:layout_width="48dp"
	android:layout_height="48dp"
	android:background="@drawable/tab"
	android:src="@drawable/save"
	android:onClick="onOpenClicked"
	android:layout_alignParentRight="true"
/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/info"
		android:text="Example"
		android:layout_alignParentRight="true"
		android:translationX="50px"
		android:rotation="90"
		android:layout_centerVertical="true"
		/>


<ImageView 
	android:id="@+id/btnInput"
	android:layout_width="48dp"
	android:layout_height="48dp"
	android:background="@drawable/tab"
	android:src="@drawable/keyboard"
/>
	<TextView
		android:id="@+id/kb_bt_alt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/btnInput"
		android:layout_alignParentLeft="true"
		android:text="Alt-`=Caps Alt-1=ShLk Alt-3=Â£\nAlt-Alt=Copy Alt-\u2190\u2191\u2192\u2193"
		android:rotation="90"
		android:transformPivotX="10dp"
		android:transformPivotY="38dp"
		/>
<TextView 
	android:id="@+id/fps"
	android:layout_width="fill_parent"
	android:layout_height="48dp"
	android:layout_alignParentBottom="true"
	android:gravity="center"
	android:textColor="#ffffffff"
	android:visibility="visible"
/>

</RelativeLayout>